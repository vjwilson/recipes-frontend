{
  "src_folders": ["e2e_tests/tests"],
  "output_folder": "e2e_tests/reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "e2e_tests/pages",
  "globals_path": "e2e_tests/globals",

  "selenium": {
    "start_process": true,
    "server_path": "./node_modules/selenium-standalone/.selenium/selenium-server/3.4.0-server.jar",
    "log_path": "./e2e_tests/reports",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/selenium-standalone/.selenium/chromedriver/2.31-x64-chromedriver"
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "https://kirkpatrick-recipes.surge.sh",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
